{
  "name": "resolve",
  "version": "0.0.40",
  "repository": "https://github.com/reimagined/resolve.git",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.16.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.0",
    "lerna": "^2.4.0",
    "lint-staged": "^6.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.0"
  },
  "workspaces": [
    "packages/*",
    "packages/bus-adapters/*",
    "packages/storage-adapters/*",
    "packages/readmodel-adapters/*",
    "benchmarks/*"
  ],
  "scripts": {
    "cleanup": "rm -Rf node_modules packages/*/node_modules && rm -Rf node_modules packages/*/dist && rm -Rf yarn.lock packages/*/yarn.lock",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prettier": "prettier --single-quote --no-semi --write \"**/**.js\"",
    "test": "lerna run test"
  },
  "pre-commit": [
    "lint-staged",
    "lint"
  ],
  "lint-staged": {
    "*.{js,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  }
}
