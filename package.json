{
  "name": "resolve",
  "version": "0.4.1",
  "repository": "https://github.com/reimagined/resolve.git",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.16.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "lint-staged": "^6.1.0",
    "oao": "^1.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.0"
  },
  "workspaces": [
    "packages/*",
    "packages/bus-adapters/*",
    "packages/storage-adapters/*",
    "packages/readmodel-adapters/*",
    "examples/*"
  ],
  "scripts": {
    "clean": "npx oao all \"npx rimraf dist\" --parallel && npx rimraf yarn-error.log && npx oao clean",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prepublish": "oao run-script prepublish --parallel",
    "prettier": "prettier --single-quote --no-semi --write \"**/**.js\"",
    "test": "oao all \"yarn test --color 2>&1\"",
    "test:functional": "oao run-script test:functional"
  },
  "pre-commit": [
    "lint-staged",
    "lint"
  ],
  "lint-staged": {
    "*.{js,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  }
}
