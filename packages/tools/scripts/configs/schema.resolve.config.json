{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "adapter": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object"
        },
        "imports": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "eventstoreAdapter": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "snapshotBucketSize": {
              "type": "integer"
            },
            "additionalProperties": true
          }
        },
        "imports": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "monitoringAdapter": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "additionalProperties": true
          }
        },
        "imports": {
          "type": "object"
        }
      },
      "required": ["module"],
      "additionalProperties": false
    },
    "resourceInstance": {
      "type": "string"
    },
    "resourcePackage": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        },
        "import": {
          "type": "string"
        }
      },
      "required": ["package", "import"],
      "additionalProperties": false
    },
    "resourceConstructor": {
      "type": "object",
      "properties": {
        "module": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourcePackage" }
          ]
        },
        "options": {
          "type": "object"
        },
        "imports": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "resourceBypass": {
      "type": "object",
      "properties": {
        "options": {
          "type": "object"
        }
      },
      "required": ["options"],
      "additionalProperties": false
    },
    "aggregate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "commands": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "serializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "deserializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "encryption": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "commandHttpResponseMode": {
          "enum": ["event", "empty"],
          "default": "event"
        }
      },
      "dependencies": {
        "serializeState": ["deserializeState"],
        "deserializeState": ["serializeState"]
      },
      "required": ["name", "commands"],
      "additionalProperties": false
    },
    "viewModel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "serializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "deserializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "resolver": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "encryption": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["name", "projection"],
      "dependencies": {
        "serializeState": ["deserializeState"],
        "deserializeState": ["serializeState"]
      },
      "additionalProperties": false
    },
    "readModel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "resolvers": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "connectorName": {
          "type": "string"
        },
        "encryption": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["name", "projection", "resolvers", "connectorName"],
      "additionalProperties": false
    },
    "saga": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "source": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "sideEffects": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "connectorName": {
          "type": "string"
        },
        "encryption": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["name", "source", "connectorName"],
      "additionalProperties": false
    },
    "apiHandler": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "handler": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" },
            { "$ref": "#/definitions/resourcePackage" }
          ]
        }
      },
      "required": ["path", "handler"],
      "additionalProperties": false
    },
    "jwtCookie": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "maxAge": {
          "type": "integer"
        }
      },
      "required": ["name", "maxAge"]
    },
    "customConstants": {
      "type": "object",
      "additionalProperties": true
    },
    "clientFullEntryProperties": {
      "type": "object",
      "properties": {
        "moduleType": { "type": "string" },
        "outputFile": { "type": "string" },
        "target": { "type": "string" }
      },
      "additionalProperties": false
    },
    "clientFullEntry": {
      "type": "array",
      "items": [
        { "type": "string" },
        { "$ref": "#/definitions/clientFullEntryProperties" }
      ],
      "minItems": 2,
      "additionalItems": false
    },
    "config": {
      "type": "object",
      "properties": {
        "clientEntries": {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/clientFullEntry" },
              { "type": "string" }
            ]
          }
        },
        "name": {
          "type": ["string"]
        },
        "rootPath": {
          "type": "string"
        },
        "distDir": {
          "type": "string"
        },
        "staticDir": {
          "type": "string"
        },
        "staticPath": {
          "type": "string"
        },
        "aggregates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/aggregate"
          }
        },
        "viewModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/viewModel"
          }
        },
        "readModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/readModel"
          }
        },
        "sagas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/saga"
          }
        },
        "apiHandlers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiHandler"
          }
        },
        "readModelConnectors": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/definitions/resourceInstance" },
              { "$ref": "#/definitions/resourceConstructor" },
              { "$ref": "#/definitions/resourceBypass" }
            ]
          }
        },
        "clientImports": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/definitions/resourceInstance" },
              { "$ref": "#/definitions/resourceConstructor" },
              { "$ref": "#/definitions/resourcePackage" }
            ]
          }
        },
        "serverImports": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/definitions/resourceInstance" },
              { "$ref": "#/definitions/resourceConstructor" }
            ]
          }
        },
        "eventstoreAdapter": {
          "$ref": "#/definitions/eventstoreAdapter"
        },
        "monitoringAdapters": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/monitoringAdapter"
          }
        },
        "jwtCookie": {
          "$ref": "#/definitions/jwtCookie"
        },
        "mode": {
          "type": "string"
        },
        "customConstants": {
          "$ref": "#/definitions/customConstants"
        },
        "uploadAdapter": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" },
            { "$ref": "#/definitions/resourceBypass" }
          ]
        },
        "middlewares": {
          "type": "object",
          "properties": {
            "aggregate": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "readModel": {
              "type": "object",
              "properties": {
                "resolver": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "projection": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "runtime": {
          "type": "object",
          "properties": {
            "module": {
              "type": "string"
            },
            "options": {
              "type": "object",
              "properties": {
                "importMode": {
                  "enum": ["static", "dynamic"],
                  "default": "static"
                },
                "additionalProperties": true
              }
            }
          },
          "required": ["module"],
          "additionalProperties": false
        }
      },
      "required": [
        "clientEntries",
        "clientImports",
        "serverImports",
        "apiHandlers",
        "rootPath",
        "distDir",
        "staticDir",
        "staticPath",
        "aggregates",
        "viewModels",
        "readModels",
        "readModelConnectors",
        "eventstoreAdapter",
        "customConstants",
        "jwtCookie",
        "sagas",
        "mode",
        "runtime"
      ],
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/config"
}
