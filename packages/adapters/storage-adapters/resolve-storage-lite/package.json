{
  "name": "resolve-storage-lite",
  "version": "0.14.4",
  "description": "This package serves as an adapter for resolve-storage to store events using a file or in memory.",
  "engines": {
    "node": ">=8.10"
  },
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "bugs": {
    "url": "https://github.com/reimagined/resolve/issues"
  },
  "scripts": {
    "compile": "npm run compile:es && npm run compile:cjs",
    "compile:es": "cross-env MODULE_TYPE=es MODULE_TARGET=server babel --config-file=../../../../babel.config.js --source-maps --out-dir ./es ./src",
    "compile:cjs": "cross-env MODULE_TYPE=cjs MODULE_TARGET=server babel --config-file=../../../../babel.config.js --source-maps --out-dir ./lib ./src",
    "test": "jest --config=../../../../jest.config.js --verbose",
    "testw": "jest --config=../../../../jest.config.js --watchAll"
  },
  "repository": "https://github.com/reimagined/resolve.git",
  "author": "reimagined team",
  "license": "MIT",
  "keywords": [
    "cqrs",
    "eventsourcing",
    "es",
    "ddd"
  ],
  "homepage": "https://github.com/reimagined/resolve/tree/master/packages/adapters/storage-adapters/resolve-storage-lite#readme",
  "dependencies": {
    "nedb": "^1.8.0",
    "resolve-storage-base": "0.14.4"
  },
  "devDependencies": {
    "jest": "23.5.0",
    "sinon": "6.2.0"
  }
}