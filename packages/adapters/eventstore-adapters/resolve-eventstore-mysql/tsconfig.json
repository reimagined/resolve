{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "outDir": "lib",
    "declarationDir": "types",
    "typeRoots": [
      "typings",
      "./node_modules/@types",
      "../../../../node_modules/@types"
    ]
  },
  "include": ["src", "typings", "test"]
}
