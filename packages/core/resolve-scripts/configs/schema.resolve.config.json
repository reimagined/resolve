    "resourceConstructor": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object"
        },
        "imports": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
