    "aggregate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "commands": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "serializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
