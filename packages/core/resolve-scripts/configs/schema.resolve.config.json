        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "serializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "deserializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "resolver": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "encryption": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["name", "projection"],
      "dependencies": {
        "serializeState": ["deserializeState"],
        "deserializeState": ["serializeState"]
      },
      "additionalProperties": false
