{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "adapter": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object"
        },
        "import": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "resourceInstance": {
      "type": "string"
    },
    "resourceConstructor": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object"
        },
        "import": {
          "type": "object"
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "subscribeAdapter": {
      "type": "object",
      "properties": {
        "module": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "client": {
              "type": "object"
            },
            "server": {
              "type": "object"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["module", "options"],
      "additionalProperties": false
    },
    "aggregate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "commands": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "snapshotAdapter": {
          "$ref": "#/definitions/adapter"
        }
      },
      "required": ["name", "commands"],
      "additionalProperties": false
    },
    "viewModel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "serializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "deserializeState": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "validator": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "snapshotAdapter": {
          "$ref": "#/definitions/adapter"
        }
      },
      "required": ["name", "projection"],
      "dependencies": {
        "serializeState": ["deserializeState"],
        "deserializeState": ["serializeState"]
      },
      "additionalProperties": false
    },
    "readModel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "projection": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "resolvers": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "adapter": {
          "$ref": "#/definitions/adapter"
        }
      },
      "required": ["name", "projection", "resolvers"],
      "additionalProperties": false
    },
    "saga": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "cronHandlers": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        },
        "eventHandlers": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "apiHandler": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "controller": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" }
          ]
        }
      },
      "required": ["path", "controller"],
      "additionalProperties": false
    },
    "jwtCookie": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "maxAge": {
          "type": "integer"
        }
      },
      "required": ["name", "maxAge"]
    },
    "redux": {
      "type": "object",
      "properties": {
        "store": {
          "type": "string"
        },
        "reducers": {
          "type": "string"
        },
        "middlewares": {
          "type": "string"
        }
      },
      "required": ["store", "reducers", "middlewares"],
      "additionalProperties": false
    },
    "auth": {
      "type": "object",
      "properties": {
        "strategies": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["strategies"]
    },
    "polyfills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "port": {
          "type": ["integer", "string"]
        },
        "index": {
          "type": "string"
        },
        "routes": {
          "type": "string"
        },
        "rootPath": {
          "type": "string"
        },
        "distDir": {
          "type": "string"
        },
        "staticDir": {
          "type": "string"
        },
        "staticPath": {
          "type": "string"
        },
        "redux": {
          "$ref": "#/definitions/redux"
        },
        "aggregates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/aggregate"
          }
        },
        "viewModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/viewModel"
          }
        },
        "readModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/readModel"
          }
        },
        "sagas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/saga"
          }
        },
        "apiHandlers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiHandler"
          }
        },
        "busAdapter": {
          "$ref": "#/definitions/adapter"
        },
        "storageAdapter": {
          "$ref": "#/definitions/adapter"
        },
        "subscribeAdapter": {
          "$ref": "#/definitions/subscribeAdapter"
        },
        "auth": {
          "$ref": "#/definitions/auth"
        },
        "jwtCookie": {
          "$ref": "#/definitions/jwtCookie"
        },
        "polyfills": {
          "$ref": "#/definitions/polyfills"
        },
        "registry": {
          "type": "string"
        },
        "mode": {
          "type": "string"
        }
      },
      "required": [
        "port",
        "index",
        "routes",
        "rootPath",
        "distDir",
        "staticDir",
        "staticPath",
        "redux",
        "aggregates",
        "viewModels",
        "readModels",
        "busAdapter",
        "storageAdapter",
        "subscribeAdapter",
        "polyfills"
      ],
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/config"
}
