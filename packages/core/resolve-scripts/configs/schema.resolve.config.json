          "$ref": "#/definitions/eventstoreAdapter"
        },
        "jwtCookie": {
          "$ref": "#/definitions/jwtCookie"
        },
        "eventBroker": {
          "$ref": "#/definitions/eventBroker"
        },
        "mode": {
          "type": "string"
        },
        "customConstants": {
          "$ref": "#/definitions/customConstants"
        },
        "uploadAdapter": {
          "oneOf": [
            { "$ref": "#/definitions/resourceInstance" },
            { "$ref": "#/definitions/resourceConstructor" },
            { "$ref": "#/definitions/resourceBypass" }
          ]
        }
      },
      "required": [
        "clientEntries",
        "clientImports",
        "serverImports",
        "apiHandlers",
        "port",
        "rootPath",
        "distDir",
        "staticDir",
        "staticPath",
        "aggregates",
        "viewModels",
        "readModels",
        "readModelConnectors",
        "eventstoreAdapter",
        "eventBroker",
        "customConstants",
        "target",
        "jwtCookie",
        "sagas",
        "mode"
      ],
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/config"
}
