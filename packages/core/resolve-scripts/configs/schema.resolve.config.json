      "required": [
        "launchBroker",
        "publisherAddress",
        "consumerAddress",
        "databaseFile"
      ],
      "additionalProperties": false
    },
    "customConstants": {
      "type": "object",
      "additionalProperties": true
    },
    "clientFullEntryProperties": {
      "type": "object",
      "properties": {
        "moduleType": { "type": "string" },
        "outputFile": { "type": "string" },
        "target": { "type": "string" }
