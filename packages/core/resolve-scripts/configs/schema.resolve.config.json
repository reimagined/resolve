        "port": {
          "type": ["integer", "string"]
        },
        "rootPath": {
          "type": "string"
        },
        "distDir": {
          "type": "string"
        },
        "staticDir": {
          "type": "string"
        },
        "staticPath": {
          "type": "string"
        },
        "aggregates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/aggregate"
          }
        },
        "viewModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/viewModel"
          }
        },
        "readModels": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/readModel"
          }
        },
        "sagas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/saga"
          }
        },
        "apiHandlers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiHandler"
          }
        },
        "readModelConnectors": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/definitions/resourceInstance" },
              { "$ref": "#/definitions/resourceConstructor" },
              { "$ref": "#/definitions/resourceBypass" }
            ]
          }
        },
        "clientImports": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/definitions/resourceInstance" },
              { "$ref": "#/definitions/resourceConstructor" }
