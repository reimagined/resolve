{
  "name": "@resolve-js/react-hooks",
  "version": "0.34.0",
  "description": "reSolve client wrapper for using in React hooks projects.",
  "keywords": [
    "cqrs",
    "eventsourcing",
    "es",
    "ddd"
  ],
  "homepage": "https://github.com/reimagined/resolve/tree/master/packages/core/resolve-api#readme",
  "bugs": {
    "url": "https://github.com/reimagined/resolve/issues"
  },
  "repository": "https://github.com/reimagined/resolve.git",
  "license": "MIT",
  "author": "reimagined team",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "yarn workspace @internal/babel-compile start --name=@resolve-js/react-hooks",
    "lint": "eslint --ignore-path=../../../.prettierignore './src/**/*.{ts,tsx}' './test/**/*.{ts,tsx}'",
    "test": "jest --config=../../../jest.config.js --verbose",
    "testw": "echo || exit 0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@resolve-js/client": "0.34.0",
    "@resolve-js/core": "0.34.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.1.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.5",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.5",
    "jest": "27.5.1",
    "jest-mock": "27.5.1",
    "react-test-renderer": "17.0.2",
    "ts-jest": "27.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "engines": {
    "node": ">=14.17"
  },
  "babelCompile": [
    {
      "moduleType": "cjs",
      "moduleTarget": "client",
      "inputDir": "./src",
      "outDir": "./lib"
    },
    {
      "moduleType": "es",
      "moduleTarget": "client",
      "inputDir": "./src",
      "outDir": "./es"
    }
  ],
  "sourceType": "ts"
}
